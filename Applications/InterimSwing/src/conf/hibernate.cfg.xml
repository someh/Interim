<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/cinterim</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <!-- <property name="show_sql">true</property> -->
        <mapping resource="com/interim/mapping/Users.hbm.xml" />
        <mapping resource="com/interim/mapping/Rdvs.hbm.xml" />
        <mapping resource="com/interim/mapping/Adresses.hbm.xml" />
        <mapping resource="com/interim/mapping/Metiers.hbm.xml" />
        <mapping resource="com/interim/mapping/Contacts.hbm.xml" />
        <mapping resource="com/interim/mapping/UserACommeMetier.hbm.xml" />
        <mapping resource="com/interim/mapping/Logins.hbm.xml" />
        <mapping resource="com/interim/mapping/Annonces.hbm.xml" />
    </session-factory>
</hibernate-configuration>
